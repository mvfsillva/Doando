@model IEnumerable<Doando.Models.Ong>

@{
    ViewBag.Title = "ONG's";
}

<h2>ONG's</h2>

<p>
    <div class="btn btn-success">
        @Html.ActionLink("Adicionar", "Create")
    </div>
</p>
<table class="table table-bordered table-hover table-responsive">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CNPJ)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NOME)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SITE)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EMAIL)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Endereco)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CNPJ)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NOME)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SITE)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EMAIL)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Endereco.RUA)
            </td>
            <td>
                <div class="form-group">
                    <div class="col-md-12 text-center" style="top:10px;">
                        @if (Request.IsAuthenticated)
                        {
                            <div class="btn btn-info btn-sm">
                                @Html.ActionLink("Editar", "Edit", new { id = item.ID_ONG })
                            </div>
                            <div class="btn btn-danger btn-sm" style="color:#FFF;">
                                @Html.ActionLink("Deletar", "Delete", new { id = item.ID_ONG })
                            </div>
                        }
                        <div class="btn btn-default btn-sm">
                            @Html.ActionLink("Detalhes", "Details", new { id = item.ID_ONG })
                        </div>
                    </div>
                </div>
            </td>
        </tr>
    }

</table>
