@model Doando.Models.Ong

@{
    ViewBag.Title = "Detalhes";
}

<h2>Detalhes</h2>

<div>
    <h4>Ong</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(model => model.CNPJ)</dt>
        <dd>@Html.DisplayFor(model => model.CNPJ)</dd>

        <dt>@Html.DisplayNameFor(model => model.NOME)</dt>
        <dd>@Html.DisplayFor(model => model.NOME)</dd>

        <dt>@Html.DisplayNameFor(model => model.SITE)</dt>
        <dd>@Html.DisplayFor(model => model.SITE)</dd>

        <dt>@Html.DisplayNameFor(model => model.EMAIL)</dt>
        <dd>@Html.DisplayFor(model => model.EMAIL)</dd>

        <dt>@Html.DisplayNameFor(model => model.Endereco)</dt>
        <dd>@Html.DisplayFor(model => model.Endereco)</dd>
    </dl>
</div>
<p>
    <div class="form-group">
        <div class="col-md-offset-1 col-md-10">
            @if (Request.IsAuthenticated)
            {
                <div class="btn btn-info">
                    @Html.ActionLink("Editar", "Edit", new { id = Model.ID_ONG })
                </div>
                <div class="btn btn-default">
                    @Html.ActionLink("Cancelar", "Index")
                </div>
            }
            else
            {
                <div class="btn btn-default">
                    @Html.ActionLink("Voltar", "Index")
                </div>
            }
        </div>
    </div>
</p>
