@model Doando.Models.Necessidade

@{
    ViewBag.Title = "Detalhes";
}

<h2>Detalhes</h2>

<div>
    <h4>Necessidade</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(model => model.DESCRICAO)</dt>
        <dd> @Html.DisplayFor(model => model.DESCRICAO)</dd>
        
        <dt>@Html.DisplayNameFor(model => model.TITULO)</dt>
        <dd>@Html.DisplayFor(model => model.TITULO)</dd>
        
        <dt>@Html.DisplayNameFor(model => model.PRIORIDADE)</dt>
        <dd>@Html.DisplayFor(model => model.PRIORIDADE)</dd>

        <dt> @Html.DisplayNameFor(model => model.DATA)</dt>
        <dd>@Html.DisplayFor(model => model.DATA)</dd>
        
        <dt>@Html.DisplayNameFor(model => model.Ong)</dt>
        <dd>@Html.DisplayFor(model => model.Ong.NOME)</dd>
    </dl>
</div>
<p>
    <div class="form-group">
        <div class="col-md-offset-1 col-md-10">
            @if (Request.IsAuthenticated)
            {
                <div class="btn btn-info">
                    @Html.ActionLink("Editar", "Edit", new { id = Model.ID_NECESSIDADE })
                </div>
                <div class="btn btn-default">
                    @Html.ActionLink("Cancelar", "Index")
                </div>
            }
            else
            {
                <div class="btn btn-default">
                    @Html.ActionLink("Voltar", "Index")
                </div>
            }
            
        </div>
    </div>
</p>
