@model Doando.Models.Necessidade

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Necessidade</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID_NECESSIDADE)

        <div class="form-group">
            <div class="col-md-5">
                @Html.LabelFor(model => model.DESCRICAO)

                @Html.EditorFor(model => model.DESCRICAO, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DESCRICAO, "", new { @class = "text-danger" })
            </div>


            <div class="col-md-5">
                @Html.LabelFor(model => model.TITULO)
                @Html.EditorFor(model => model.TITULO, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TITULO, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">

            <div class="col-md-5">
                @Html.LabelFor(model => model.PRIORIDADE)
                @Html.EditorFor(model => model.PRIORIDADE, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PRIORIDADE, "", new { @class = "text-danger" })
            </div>

            <div class="col-md-5">
                @Html.LabelFor(model => model.DATA)
                @Html.EditorFor(model => model.DATA, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DATA, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">

            <div class="col-md-5">
                @Html.LabelFor(model => model.Ong.NOME)
                @Html.DropDownList("ID_ONG", String.Empty)
                @Html.ValidationMessageFor(model => model.Ong.NOME, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12 pull-left">
                <input type="submit" value="Salvar" class="btn btn-success" />
                <div class="btn btn-default">
                    @Html.ActionLink("Cancelar", "Index")
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
