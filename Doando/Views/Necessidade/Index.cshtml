@model IEnumerable<Doando.Models.Necessidade>

@{
    ViewBag.Title = "Necessidades";
}

<h2>Necessidades</h2>

<p>
    <div class="btn btn-default">
        @Html.ActionLink("Adicionar", "Create")
    </div>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DESCRICAO)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TITULO)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PRIORIDADE)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DATA)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ID_ONG)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CNPJ)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DESCRICAO)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TITULO)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PRIORIDADE)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DATA)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ID_ONG)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CNPJ)
        </td>
        <td>
            <div class="form-group">
                <div class="col-md-offset-3 col-md-10">
                    @if (Request.IsAuthenticated)
                    {
                        <div class="btn btn-default ">
                            @Html.ActionLink("Editar", "Edit", new { id = item.ID_NECESSIDADE })
                        </div>
                        <div class="btn btn-default">
                            @Html.ActionLink("Deletar", "Delete", new { id = item.ID_NECESSIDADE })
                        </div>
                    }
                    <div class="btn btn-default">
                        @Html.ActionLink("Detalhes", "Details", new { id = item.ID_NECESSIDADE })
                    </div>
                </div>
            </div>
        </td>
    </tr>
}

</table>
